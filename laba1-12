#include <stdio.h>
#include <string.h>

int main() {
    char S[100];
    int N;
    
    printf("Введите строку S: ");
    fgets(S, sizeof(S), stdin);
    S[strcspn(S, "\n")] = '\0';
    
    printf("Введите число N: ");
    scanf("%d", &N);
    
    int len = strlen(S);
    
    printf("Результат: ");
    for (int i = 0; i < len; i++) {
        printf("%c", S[i]);
        if (i < len - 1) {
            for (int j = 0; j < N; j++) {
                printf("*");
            }
        }
    }
    printf("\n");
    
    return 0;
}
