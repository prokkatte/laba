#include <stdio.h>

int main() {
    int N, temp, thousands_digit;
    
    // Ввод числа
    printf("Введите целое число, большее 999: ");
    scanf("%d", &N);
    
    // Проверка, что число больше 999
    if (N <= 999) {
        printf("Ошибка: число должно быть больше 999!\n");
        return 1; // Возврат кода ошибки
    }
    
    // Вычисление цифры тысяч
    // Первая операция: деление нацело на 1000
    temp = N / 1000;
    
    // Вторая операция: взятие остатка от деления на 10
    thousands_digit = temp % 10;
    
    // Вывод результата
    printf("В числе %d цифра в разряде тысяч: %d\n", N, thousands_digit);
    
    return 0;
}
