#include <stdio.h>

int main() {
    char str[100];
    
    printf("Введите строку: ");
    fgets(str, sizeof(str), stdin);
    
    // Убираем символ новой строки
    size_t len = strlen(str);
    if (len > 0 && str[len - 1] == '\n') {
        str[len - 1] = '\0';
        len--;
    }
    
    // Выводим символы в обратном порядке
    printf("Обратная строка: ");
    for (int i = len - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
    printf("\n");
    
    return 0;
}
