#include <stdio.h>
#include <ctype.h>

int main() {
    char str[100];
    int count = 0;
    
    printf("Введите строку: ");
    fgets(str, sizeof(str), stdin);
    
    for (int i = 0; str[i] != '\0'; i++) {
        if (isupper(str[i])) {
            count++;
        }
    }
    
    printf("Количество прописных латинских букв: %d\n", count);
    
    return 0;
}
