#include <stdio.h>

int main() {
    char str[256];
    
    printf("Введите строку: ");
    fgets(str, sizeof(str), stdin);
    
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] += 32;
        }
    }
    
    printf("Результат: %s", str);
    return 0;
}
