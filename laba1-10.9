#include <stdio.h>

int main() {
    int N;
    char C1, C2;
    
    // Ввод данных
    printf("Введите четное число N: ");
    scanf("%d", &N);
    
    printf("Введите символ C1: ");
    scanf(" %c", &C1);
    
    printf("Введите символ C2: ");
    scanf(" %c", &C2);
    
    // Проверка, что N > 0 и четное
    if (N <= 0) {
        printf("Ошибка: N должно быть больше 0\n");
        return 1;
    }
    if (N % 2 != 0) {
        printf("Ошибка: N должно быть четным\n");
        return 1;
    }
    
    // Вывод строки из чередующихся символов
    for (int i = 0; i < N; i++) {
        if (i % 2 == 0) {
            printf("%c", C1);  // Четные позиции (0, 2, 4...) - C1
        } else {
            printf("%c", C2);  // Нечетные позиции (1, 3, 5...) - C2
        }
    }
    printf("\n");
    
    return 0;
}
